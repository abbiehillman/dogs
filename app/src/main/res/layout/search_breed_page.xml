<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_random_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="#B9FAD3"
    android:backgroundTintMode="multiply">

    <ImageView
        android:id="@+id/imageView_searchByBreed_dog"
        android:layout_width="342dp"
        android:layout_height="272dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_searchBreed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_search_title"
        app:srcCompat="@drawable/snowdawg" />

    <TextView
        android:id="@+id/textView_search_title"
        android:layout_width="379dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/chelsea_market"
        android:gravity="center"
        android:text="Search by Breed"
        android:textColor="#127169"
        android:textSize="44sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_searchByBreed_dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_searchBreed"
        android:layout_width="417dp"
        android:layout_height="358dp"
        android:layout_marginTop="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_searchByBreed_dog"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>